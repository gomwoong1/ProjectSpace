<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_marginTop="10dp">

    <ImageView
        android:id="@+id/back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:src="@drawable/backimg" />

    <TextView
        android:id="@+id/list_homeNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="11dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/foot"
        android:text="201호"
        android:textColor="#FFFFFF"
        android:textSize="22dp" />

    <TextView
        android:id="@+id/list_carNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/back"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="6dp"
        android:layout_toRightOf="@id/back"
        android:fontFamily="@font/foot"
        android:text="33저 0792"
        android:textColor="#000000"
        android:textSize="25dp" />

    <TextView
        android:id="@+id/list_carKind"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/list_carNumber"
        android:layout_alignLeft="@id/list_carNumber"
        android:text="더 넥스트 스파크"
        android:textSize="22dp" />

    <TextView
        android:id="@+id/list_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/list_carKind"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:text="010-8429-7735"
        android:textSize="16dp" />

</RelativeLayout>