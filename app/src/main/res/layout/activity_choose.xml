<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".ChooseActivity">

    <ImageView
        android:id="@+id/back_choose"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:scaleType="centerCrop"
        android:src="@drawable/choose_back" />

    <TextView
        android:id="@+id/welcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="110dp"
        android:layout_marginTop="115dp"
        android:fontFamily="@font/foot"
        android:text="환영"
        android:textColor="#000000"
        android:textSize="40dp" />
        <!-- fontFamily로 폰트 설정-->

    <TextView
        android:id="@+id/welcome2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/welcome"
        android:layout_toRightOf="@id/welcome"
        android:fontFamily="@font/foot"
        android:text="합니다."
        android:textColor="#FFFFFF"
        android:textSize="40dp" />

    <ImageButton
        android:id="@+id/parkBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/welcome2"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="170dp"
        android:background="@android:color/transparent"
        android:src="@drawable/park_btn" />

    <ImageButton
        android:id="@+id/alramBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/parkBtn"
        android:layout_alignLeft="@id/parkBtn"
        android:layout_marginTop="35dp"
        android:background="@android:color/transparent"
        android:src="@drawable/alram_btn" />

    <ImageButton
        android:id="@+id/carMgBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/alramBtn"
        android:layout_alignLeft="@id/alramBtn"
        android:layout_marginTop="35dp"
        android:background="@android:color/transparent"
        android:src="@drawable/car_mg_btn" />

</RelativeLayout>